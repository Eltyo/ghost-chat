{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "outDir": "dist_ts",
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "composite": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": false,
    "declaration": true,
    "types": ["node"]
  }
}
